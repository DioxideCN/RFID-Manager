<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center" >

    <TextView
        android:id="@+id/main_item_epc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textSize="14sp" />

    <TextView
        android:id="@+id/main_item_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:background="@drawable/data_label_both"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/main_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:background="@drawable/data_label_style"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/main_item_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textSize="14sp" />
</LinearLayout>